<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorViewHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsetoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:minHeight="100dp"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap">

            <RelativeLayout
                android:id="@+id/coverHolderView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/movie_backdrop_temp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/movie_backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/coverInfoHolder"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/entry_cover_gradient">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/movie_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_40"
                        android:background="@drawable/selected_region_bg"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:padding="@dimen/dp_6"
                        android:text="Rating"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/movie_rating"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:text="Title"
                        android:textColor="@color/dark_white"
                        android:textSize="@dimen/sp_38" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/movie_tag_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/movie_title"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_6"
                        android:text="Tagline"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="italic" />


                    <View
                        android:id="@+id/coverDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/movie_tag_line"
                        android:layout_margin="@dimen/dp_25"
                        android:background="@color/view_divider_thin_color" />

                    <include
                        layout="@layout/topic_cover_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/coverDivider"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:visibility="gone" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/readTxtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="center"
                        android:text="READ MORE"
                        android:textColor="@color/dirty_white"
                        android:textSize="@dimen/sp_10" />

                    <ImageView
                        android:id="@+id/readIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/readTxtTitle"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="-5dp"
                        android:layout_marginTop="50dp"
                        app:srcCompat="@drawable/arrow_up_white" />

                </RelativeLayout>


            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/detailsHolderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/dp_30"

                >

                <RelativeLayout
                    android:id="@+id/poster_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/dp_20">

                    <FrameLayout
                        android:id="@+id/poster_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/movie_poster_detail"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:scaleType="centerCrop" />


                        <ImageView
                            android:id="@+id/gradientOverlay"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/entry_cover_gradient" />

                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/movie_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/selected_region_bg"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:padding="@dimen/dp_3"
                        android:textAllCaps="true"
                        android:textColor="@color/dirty_white"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@id/movie_status"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:textColor="@color/primary_light_text_color"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@id/release_date"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:textColor="@color/primary_light_text_color"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/running_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@id/language"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:textColor="@color/primary_light_text_color"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/vote_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:textColor="@color/app_accent"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold" />


                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poster_container"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_14" />


                <View
                    android:id="@+id/ownerDivider"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/overview"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/dark_gray" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ownerDivider"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Genres: "
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/genre_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ownerDivider"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/genres"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genres"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Budget: "
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/budget_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genres"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/budget"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/budget"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="Revenue: "
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/revenue_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/budget"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_toRightOf="@id/revenue"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="@color/primary_light_text_color"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_container"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="You might also like"
                    android:textColor="@color/dirty_white"
                    android:textSize="@dimen/sp_16" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similarRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_15"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    />


            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>